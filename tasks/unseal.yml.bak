---
- name: Unsealing new Vault member.
  uri:
    url: '{% if vault_tls | bool %}https{% else %}http{% endif %}://{{ vault_servers_item }}:{{ vault_port_arg.api }}/v1/sys/unseal'
    method: 'PUT'
    timeout: '30'
    body: '{"key":"{{ vault_init_key[item] }}"}'
    body_format: 'json'
    status_code: '200'
    headers:
      X-Requested-By: '{{ vault_servers_item }}'
      cache-control: 'no-cache'
    validate_certs: 'no'
  environment:
    no_proxy: '{{ vault_servers_item }}'
  with_sequence: start={{ vault_servers_index }} end={{ vault_servers | length * 2 + vault_servers_index }} stride=3
  register: vault_unseal_status
  until: vault_unseal_status.status == 200
  retries: 5
  delay: 2
#  no_log: true
